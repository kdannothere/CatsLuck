<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b11"
    tools:context="presentation.fragments.GamesFragment">

    <ImageView
        android:id="@+id/button_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/register"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h12"
        app:layout_constraintEnd_toEndOf="@id/guideline_v64"
        app:layout_constraintStart_toStartOf="@id/guideline_v8"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bar_lvl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h12"
        app:layout_constraintEnd_toEndOf="@id/guideline_v64"
        app:layout_constraintStart_toStartOf="@id/guideline_v8"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lvl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/lvl"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lvl_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:visibility="visible"
            tools:text="100" />

    </LinearLayout>

    <ImageView
        android:id="@+id/button_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h12"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_v77"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/game_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/game_1"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h32"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="@id/guideline_v92"
        app:layout_constraintStart_toStartOf="@id/guideline_v8"
        app:layout_constraintTop_toTopOf="@id/guideline_h12" />

    <ImageView
        android:id="@+id/game_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/game_2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h69"
        app:layout_constraintEnd_toEndOf="@id/guideline_v48"
        app:layout_constraintStart_toStartOf="@id/guideline_v8"
        app:layout_constraintTop_toTopOf="@id/guideline_h32" />

    <ImageView
        android:id="@+id/game_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/game_3_locked"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h49"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="@id/guideline_v92"
        app:layout_constraintStart_toStartOf="@id/guideline_v54"
        app:layout_constraintTop_toTopOf="@id/guideline_h32" />

    <ImageView
        android:id="@+id/game_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/game_4_locked"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h69"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="@id/guideline_v92"
        app:layout_constraintStart_toStartOf="@id/guideline_v54"
        app:layout_constraintTop_toTopOf="@id/guideline_h49" />

    <ImageView
        android:id="@+id/game_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/game_5"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h85"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="@id/guideline_v54"
        app:layout_constraintStart_toStartOf="@id/guideline_v8"
        app:layout_constraintTop_toTopOf="@id/guideline_h69" />

    <ImageView
        android:id="@+id/game_6_coming_soon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/fdafadfa"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h85"
        app:layout_constraintDimensionRatio="1:1.4"
        app:layout_constraintEnd_toEndOf="@id/guideline_v92"
        app:layout_constraintStart_toStartOf="@id/guideline_v64"
        app:layout_constraintTop_toTopOf="@id/guideline_h69" />

    <ImageView
        android:id="@+id/game_7_coming_soon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/fdafda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="10:3"
        app:layout_constraintEnd_toEndOf="@id/guideline_v92"
        app:layout_constraintStart_toStartOf="@id/guideline_v8"
        app:layout_constraintTop_toTopOf="@id/guideline_h85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.495" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.64" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.77" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

</androidx.constraintlayout.widget.ConstraintLayout>